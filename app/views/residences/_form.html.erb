<%= form_for @residence, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :building, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :building, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :person, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :person, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :start_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :end_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bedroom, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :bedroom, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bathroom, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :bathroom, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :capacity, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :capacity, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                residences_path, :class => 'btn' %>
  </div>
<% end %>
