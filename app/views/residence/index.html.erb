<%- model_class = Residence -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:availability) %></th>
      <th><%= model_class.human_attribute_name(:bedroom) %></th>
      <th><%= model_class.human_attribute_name(:bathroom) %></th>
      <th><%= model_class.human_attribute_name(:num_people) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @residences.each do |residence| %>
      <tr>
        <td><%= link_to residence.id, residence_path(residence) %></td>
        <td><%= residence.name %></td>
        <td><%= residence.address %></td>
        <td><%= residence.price %></td>
        <td><%= residence.availability %></td>
        <td><%= residence.bedroom %></td>
        <td><%= residence.bathroom %></td>
        <td><%= residence.num_people %></td>
        <td><%=l residence.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_residence_path(residence), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      residence_path(residence),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_residence_path,
            :class => 'btn btn-primary' %>
