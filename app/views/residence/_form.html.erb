<%= form_for @residence, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :price, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :availability, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :availability, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bedroom, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :bedroom, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bathroom, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :bathroom, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :num_people, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :num_people, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                residence_path, :class => 'btn' %>
  </div>
<% end %>
