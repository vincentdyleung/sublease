<%- model_class = Residence -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @residence.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @residence.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @residence.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:availability) %>:</strong></dt>
  <dd><%= @residence.availability %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bedroom) %>:</strong></dt>
  <dd><%= @residence.bedroom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bathroom) %>:</strong></dt>
  <dd><%= @residence.bathroom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_people) %>:</strong></dt>
  <dd><%= @residence.num_people %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              residence_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_residence_path(@residence), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              residence_path(@residence),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
